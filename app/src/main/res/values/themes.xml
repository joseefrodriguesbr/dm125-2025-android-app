<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTasks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cor Primária (para a ActionBar, etc.) -->
        <item name="colorPrimary">@color/my_app_primary</item>
        <item name="colorPrimaryVariant">@color/my_app_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cor Secundária/de Destaque (para o FloatingActionButton, CheckBox, etc.) -->
        <item name="colorSecondary">@color/my_app_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Cor de destaque para componentes mais antigos. É bom mantê-la sincronizada com a secundária. -->
        <item name="colorAccent">@color/my_app_secondary</item>

        <!-- Cor da Barra de Status (a barra no topo da tela) -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Seus outros atributos -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.MyTasks" parent="Base.Theme.MyTasks" />
</resources>
